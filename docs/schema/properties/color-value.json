{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Color Value",
    "description": "An animatable property that holds a Color",
    "allOf": [
        {
            "$ref": "#/properties/animatable-mixin"
        },
        {
            "type": "object",
            "properties": {
                "k": {
                    "title": "Keyframes",
                    "type": "array",
                    "item": {
                        "$ref": "#/properties/offset-keyframe"
                    }
                },
                "ix": {
                    "title": "Property Index",
                    "type": "integer"
                },
                "a": {
                    "title": "Animated",
                    "$ref": "#/types/int-boolean",
                    "default": 0
                }
            },
            "required": []
        }
    ]
}