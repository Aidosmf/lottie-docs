{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Keyframe Bezier Handle",
    "description": "Bezier handle for keyframe interpolation",
    "properties": {
        "x": {
            "title": "X",
            "type": "array",
            "items": {
                "type": "number",
                "default": 0,
                "minimum": 0,
                "maximum": 1
            },
            "minItems": 1,
            "maxItems": 1
        },
        "y": {
            "title": "Y",
            "type": "array",
            "items": {
                "type": "number",
                "default": 0,
                "minimum": 0,
                "maximum": 1
            },
            "minItems": 1,
            "maxItems": 1
        }
    },
    "required": ["x", "y"]
}
