{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Bezier",
    "description": "Single bezier curve",
    "properties": {
        "c": {
            "title": "Closed",
            "type": "boolean",
            "default": false
        },
        "i": {
            "title": "In Tangents",
            "type": "array",
            "items": {
                "type": "number",
                "default": []
            }
        },
        "o": {
            "title": "Out Tangents",
            "type": "array",
            "items": {
                "type": "number",
                "default": []
            }
        },
        "v": {
            "title": "Vertices",
            "type": "array",
            "items": {
                "type": "number",
                "default": []
            }
        }
    },
    "required": ["i", "v", "o"]
}
