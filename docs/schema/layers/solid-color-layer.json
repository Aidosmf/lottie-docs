{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Solid Color Layer",
    "description": "Layer with a solid color rectangle",
    "allOf": [
        {
            "$ref": "#/$defs/layers/visual-layer"
        },
        {
            "type": "object",
            "properties": {
                "ty": {
                    "title": "Solid Color Layer Type",
                    "type": "integer",
                    "const": 1
                },
                "sc": {
                    "title": "Solid Color Layer Color",
                    "description": "Color of the layer, unlike most other places, the color is a `#rrggbb` hex string",
                    "type": "string",
                    "default": ""
                },
                "sh": {
                    "title": "Solid Color Layer Height",
                    "type": "number",
                    "default": 512
                },
                "sw": {
                    "title": "Solid Color Layer Width",
                    "type": "number",
                    "default": 512
                }
            },
            "required": [
                "ty", "sc", "sw", "sh"
            ]
        }
    ]
}
