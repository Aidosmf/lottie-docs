{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Shape Layer",
    "description": "Layer containing ShapeElement objects",
    "allOf": [
        {
            "$ref": "#/layers/layer"
        },
        {
            "type": "object",
            "properties": {
                "ty": {
                    "title": "Type",
                    "type": "integer",
                    "const": 4
                },
                "shapes": {
                    "title": "Shapes",
                    "type": "array",
                    "item": {
                        "$ref": "#/shapes/shape-element"
                    }
                }
            },
            "required": [
                "ty"
            ]
        }
    ]
}