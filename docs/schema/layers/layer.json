{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Layer",
    "description": "",
    "allOf": [
        {
            "$ref": "#/$defs/helpers/visual-object"
        },
        {
            "$ref": "#/$defs/helpers/three-dimensional"
        },
        {
            "type": "object",
            "properties": {
                "hd": {
                    "title": "Layer Hidden",
                    "description": "Whether the layer is hidden",
                    "type": "boolean"
                },
                "ty": {
                    "title": "Layer Type",
                    "type": "integer",
                    "oneOf": [
                        {
                            "const": 0,
                            "title": "Precomposition Layer Type"
                        },
                        {
                            "const": 1,
                            "title": "Solid color Layer Type"
                        },
                        {
                            "const": 2,
                            "title": "Image Layer Type"
                        },
                        {
                            "const": 3,
                            "title": "Null Layer Type"
                        },
                        {
                            "const": 4,
                            "title": "Shape Layer Type"
                        },
                        {
                            "const": 5,
                            "title": "Text Layer Type"
                        },
                        {
                            "const": 6,
                            "title": "Audio Layer Type"
                        },
                        {
                            "const": 7,
                            "title": "Video Placeholder Layer Type"
                        },
                        {
                            "const": 8,
                            "title": "Image Sequence Layer Type"
                        },
                        {
                            "const": 9,
                            "title": "Video Layer Type"
                        },
                        {
                            "const": 10,
                            "title": "Image Placeholder Layer Type"
                        },
                        {
                            "const": 11,
                            "title": "Guide Layer Type"
                        },
                        {
                            "const": 12,
                            "title": "Adjustment Layer Type"
                        },
                        {
                            "const": 13,
                            "title": "Camera Layer Type"
                        },
                        {
                            "const": 14,
                            "title": "Light Layer Type"
                        }
                    ]
                },
                "ind": {
                    "title": "Layer Index",
                    "type": "integer"
                },
                "parent": {
                    "title": "Parent Index",
                    "description": "Must be the `ind` property of another Layer",
                    "type": "integer"
                },
                "sr": {
                    "title": "Time Stretch",
                    "type": "number",
                    "default": 1
                },
                "ip": {
                    "title": "Layer In Point",
                    "description": "Frame when the layers becomes visible",
                    "type": "number"
                },
                "op": {
                    "title": "Layer Out Point",
                    "description": "Frame when the layers becomes invisible",
                    "type": "number"
                },
                "st": {
                    "title": "Layer Start Time",
                    "type": "number",
                    "default": 0
                },
                "bm": {
                    "title": "Layer Blend Mode",
                    "$ref": "#/$defs/constants/blend-mode",
                    "default": 0
                },
                "cl": {
                    "title": "CSS Class",
                    "description": "CSS class used by the SVG renderer",
                    "type": "string"
                },
                "ln": {
                    "title": "Layer XML ID",
                    "description": "`id` attribute used by the SVG renderer",
                    "type": "string"
                }
            },
            "required": ["ty", "st", "ip", "op"]
        }
    ]
}
