{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Layer",
    "description": "",
    "allOf": [
        {
            "$ref": "#/$defs/helpers/visual-object"
        },
        {
            "type": "object",
            "properties": {
                "ddd": {
                    "title": "Threedimensional",
                    "$ref": "#/$defs/types/int-boolean",
                    "default": 0
                },
                "hd": {
                    "title": "Hidden",
                    "type": "boolean"
                },
                "ty": {
                    "title": "Type",
                    "description": "Layer Type",
                    "type": "integer",
                    "oneOf": [
                        {
                            "const": 0,
                            "title": "Precomposition layer"
                        },
                        {
                            "const": 1,
                            "title": "Solid color layer"
                        },
                        {
                            "const": 2,
                            "title": "Image layer"
                        },
                        {
                            "const": 3,
                            "title": "Null layer"
                        },
                        {
                            "const": 4,
                            "title": "Shape layer"
                        },
                        {
                            "const": 5,
                            "title": "Text layer"
                        },
                        {
                            "const": 6,
                            "title": "Audio layer"
                        },
                        {
                            "const": 7,
                            "title": "Video placeholder"
                        },
                        {
                            "const": 8,
                            "title": "Image sequence"
                        },
                        {
                            "const": 9,
                            "title": "Video layer"
                        },
                        {
                            "const": 10,
                            "title": "Image placeholder"
                        },
                        {
                            "const": 11,
                            "title": "Guide layer"
                        },
                        {
                            "const": 12,
                            "title": "Adjustment layer"
                        },
                        {
                            "const": 13,
                            "title": "Camera"
                        },
                        {
                            "const": 14,
                            "title": "Light layer"
                        }
                    ]
                },
                "parent": {
                    "title": "Parent Index",
                    "type": "integer"
                },
                "sr": {
                    "title": "Stretch",
                    "type": "number",
                    "default": 1
                },
                "ks": {
                    "title": "Transform",
                    "$ref": "#/$defs/helpers/transform"
                },
                "ao": {
                    "title": "Auto Orient",
                    "$ref": "#/$defs/types/int-boolean",
                    "default": 0
                },
                "ip": {
                    "title": "In Point",
                    "type": "number"
                },
                "op": {
                    "title": "Out Point",
                    "type": "number"
                },
                "st": {
                    "title": "Start Time",
                    "type": "number",
                    "default": 0
                },
                "bm": {
                    "title": "Blend Mode",
                    "$ref": "#/$defs/constants/blend-mode",
                    "default": 0
                },
                "tt": {
                    "title": "Matte Mode",
                    "$ref": "#/$defs/constants/matte-mode"
                },
                "ind": {
                    "title": "Index",
                    "type": "integer"
                },
                "hasMask": {
                    "title": "Has Masks",
                    "type": "boolean"
                },
                "masksProperties": {
                    "title": "Masks",
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/helpers/mask"
                    }
                },
                "ef": {
                    "title": "Effects",
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/effects/effect"
                    }
                },
                "td": {
                    "title": "Matte Target",
                    "type": "integer"
                }
            },
            "required": ["ty", "st", "ip", "op", "ks"]
        }
    ]
}
