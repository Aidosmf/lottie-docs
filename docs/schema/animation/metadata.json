{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Metadata",
    "description": "Document metadata",
    "properties": {
        "a": {
            "title": "Author",
            "type": "string"
        },
        "k": {
            "title": "Keywords",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "d": {
            "title": "Description",
            "type": "string"
        },
        "c": {
            "title": "Theme Color",
            "type": "string"
        },
        "g": {
            "title": "Generator",
            "description": "Software used to generate the file",
            "type": "string"
        }
    }
}
