{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Chars",
    "description": "Defines character shapes to avoid loading system fonts",
    "properties": {
        "ch": {
            "title": "Character",
            "type": "string",
            "default": ""
        },
        "fFamily": {
            "title": "Font Family",
            "type": "string",
            "default": ""
        },
        "size": {
            "title": "Font Size",
            "type": "number",
            "default": 0
        },
        "style": {
            "title": "Font Style",
            "type": "string",
            "default": ""
        },
        "w": {
            "title": "Font Width",
            "type": "number",
            "default": 0
        },
        "data": {
            "title": "Data",
            "type": "object",
            "properties": {
                "shapes": {
                    "title": "Shapes",
                    "description": "Shapes forming the character",
                    "$ref": "#/$defs/shapes/shape-list"
                }
            },
            "required": ["shapes"]
        }
    },
    "required": ["data", "ch", "fFamily", "size", "style", "w"]
}
