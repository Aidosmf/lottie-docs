{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Text Document",
    "description": "Note that for multi-line text, lines are separated by \\r",
    "properties": {
        "f": {
            "title": "Font Family",
            "type": "string",
            "default": ""
        },
        "fc": {
            "title": "Font Color",
            "$ref": "#/$defs/helpers/color",
            "default": [
                0,
                0,
                0
            ]
        },
        "s": {
            "title": "Font Size",
            "type": "number",
            "default": 10
        },
        "lh": {
            "title": "Line Height",
            "description": "Line height when wrapping",
            "type": "number"
        },
        "sz": {
            "title": "Wrap Size",
            "description": "Size of the box containing the text",
            "type": "array",
            "items": {
                "type": "number"
            }
        },
        "t": {
            "title": "Text",
            "type": "string",
            "default": ""
        },
        "j": {
            "title": "Justify",
            "$ref": "#/$defs/constants/text-justify",
            "default": 0
        },
        "ca": {
            "title": "Text Caps",
            "$ref": "#/$defs/constants/text-caps"
        },
        "tr": {
            "title": "Tracking",
            "description": "Text Tracking",
            "type": "number"
        }
    },
    "required": ["f", "fc", "s", "t"]
}
