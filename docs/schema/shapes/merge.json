{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Merge",
    "caniuse": "shape-merge-path",
    "description": "Boolean operator on shapes",
    "allOf": [
        {
            "$ref": "#/$defs/shapes/shape-element"
        },
        {
            "type": "object",
            "properties": {
                "ty": {
                    "title": "Shape Type",
                    "type": "string",
                    "const": "mm"
                },
                "mm": {
                    "title": "Merge Mode",
                    "type": "number",
                    "default": 1
                }
            },
            "required": [
                "ty"
            ]
        }
    ]
}
