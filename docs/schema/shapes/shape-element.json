{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Shape Element",
    "description": "Base class for all elements of ShapeLayer and Group",
    "allOf": [
        {
            "$ref": "#/$defs/helpers/visual-object"
        },
        {
            "type": "object",
            "properties": {
                "hd": {
                    "title": "Shape Hidden",
                    "description": "Whether the shape is hidden",
                    "type": "boolean"
                },
                "ty": {
                    "title": "Shape Type",
                    "type": "string",
                    "oneOf": [
                        {
                            "$ref": "#/$defs/constants/rectangle-type"
                        },
                        {
                            "$ref": "#/$defs/constants/ellipse-type"
                        },
                        {
                            "$ref": "#/$defs/constants/polystar-type"
                        },
                        {
                            "$ref": "#/$defs/constants/path-type"
                        },
                        {
                            "$ref": "#/$defs/constants/fill-type"
                        },
                        {
                            "$ref": "#/$defs/constants/stroke-type"
                        },
                        {
                            "$ref": "#/$defs/constants/gradient-fill-type"
                        },
                        {
                            "$ref": "#/$defs/constants/gradient-stroke-type"
                        },
                        {
                            "$ref": "#/$defs/constants/group-type"
                        },
                        {
                            "$ref": "#/$defs/constants/transform-type"
                        },
                        {
                            "$ref": "#/$defs/constants/rounded-corners-type"
                        },
                        {
                            "$ref": "#/$defs/constants/pucker-bloat-type"
                        },
                        {
                            "$ref": "#/$defs/constants/merge-type"
                        },
                        {
                            "$ref": "#/$defs/constants/twist-type"
                        },
                        {
                            "$ref": "#/$defs/constants/offset-path-type"
                        },
                        {
                            "$ref": "#/$defs/constants/zig-zag-type"
                        }
                    ]
                },
                "bm": {
                    "title": "Shape Blend Mode",
                    "$ref": "#/$defs/constants/blend-mode"
                },
                "cix": {
                    "title": "Shape Property Index",
                    "description": "Index used in expressions",
                    "type": "integer"
                }
            },
            "required": ["ty"]
        }
    ]
}
