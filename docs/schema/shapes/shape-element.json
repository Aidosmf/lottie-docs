{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Shape Element",
    "description": "Base class for all elements of ShapeLayer and Group",
    "allOf": [
        {
            "$ref": "#/$defs/helpers/visual-object"
        },
        {
            "type": "object",
            "properties": {
                "hd": {
                    "title": "Shape Hidden",
                    "description": "Whether the shape is hidden",
                    "type": "boolean"
                },
                "ty": {
                    "title": "Shape Element Type",
                    "type": "string",
                    "oneOf": [
                        {
                            "const": "rc",
                            "title": "Shape Element Type Rectangle"
                        },
                        {
                            "const": "el",
                            "title": "Shape Element Type Ellipse"
                        },
                        {
                            "const": "sr",
                            "title": "Shape Element Type Polygon Or Star"
                        },
                        {
                            "const": "sh",
                            "title": "Shape Element Type Path"
                        },
                        {
                            "const": "fl",
                            "title": "Shape Element Type Fill"
                        },
                        {
                            "const": "st",
                            "title": "Shape Element Type Stroke"
                        },
                        {
                            "const": "gf",
                            "title": "Shape Element Type Gradient fill"
                        },
                        {
                            "const": "gs",
                            "title": "Shape Element Type Gradient stroke"
                        },
                        {
                            "const": "gr",
                            "title": "Shape Element Type Group"
                        },
                        {
                            "const": "tr",
                            "title": "Shape Element Type Transform"
                        },
                        {
                            "const": "rd",
                            "title": "Shape Element Type Rounded corners"
                        },
                        {
                            "const": "pb",
                            "title": "Shape Element Type Pucker or Bloat"
                        },
                        {
                            "const": "mm",
                            "title": "Shape Element Type Merge"
                        },
                        {
                            "const": "tw",
                            "title": "Shape Element Type Twist"
                        },
                        {
                            "const": "op",
                            "title": "Shape Element Type Offset Path"
                        },
                        {
                            "const": "zz",
                            "title": "Shape Element Type Zig zag"
                        }
                    ]
                },
                "bm": {
                    "title": "Shape Blend Mode",
                    "$ref": "#/$defs/constants/blend-mode"
                },
                "cix": {
                    "title": "Property index",
                    "description": "Index used in expressions",
                    "type": "integer"
                }
            },
            "required": ["ty"]
        }
    ]
}
