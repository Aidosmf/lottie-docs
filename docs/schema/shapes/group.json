{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Group",
    "description": "Shape Element that can contain other shapes",
    "allOf": [
        {
            "$ref": "#/shapes/shape-element"
        },
        {
            "type": "object",
            "properties": {
                "ty": {
                    "title": "Type",
                    "type": "string",
                    "const": "gr"
                },
                "np": {
                    "title": "Number Of Properties",
                    "type": "number"
                },
                "it": {
                    "title": "Shapes",
                    "type": "array",
                    "item": {
                        "$ref": "#/shapes/shape-element"
                    }
                }
            },
            "required": [
                "ty"
            ]
        }
    ]
}
