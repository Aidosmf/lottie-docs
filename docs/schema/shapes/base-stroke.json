{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Base Stroke",
    "description": "",
    "allOf": [
        {
            "type": "object",
            "properties": {
                "lc": {
                    "title": "Line Cap",
                    "$ref": "#/$defs/constants/line-cap",
                    "default": 2
                },
                "lj": {
                    "title": "Line Join",
                    "$ref": "#/$defs/constants/line-join",
                    "default": 2
                },
                "ml": {
                    "title": "Miter Limit",
                    "type": "number",
                    "default": 0
                },
                "o": {
                    "title": "Opacity",
                    "$ref": "#/$defs/animated-properties/value"
                },
                "w": {
                    "title": "Base Stroke Width",
                    "$ref": "#/$defs/animated-properties/value"
                },
                "d": {
                    "title": "Dashes",
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/shapes/stroke-dash"
                    }
                }
            },
            "required": ["o", "w"]
        }
    ]
}
