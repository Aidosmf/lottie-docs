{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Drop Shadow Effect",
    "description": "Adds a shadow to the layer\n@note Opacity is in [0, 255]",
    "allOf": [
        {
            "$ref": "#/$defs/effects/effect"
        },
        {
            "type": "object",
            "properties": {
                "ty": {
                    "title": "Type",
                    "type": "integer",
                    "const": 25
                },
                "ef": {
                    "title": "Effect values",
                    "type": "array",
                    "prefixItems": [
                        {
                            "title": "color",
                            "$ref": "#/$defs/effects/effect-value-color"
                        },
                        {
                            "title": "opacity",
                            "$ref": "#/$defs/effects/effect-value-slider"
                        },
                        {
                            "title": "angle",
                            "$ref": "#/$defs/effects/effect-value-angle"
                        },
                        {
                            "title": "distance",
                            "$ref": "#/$defs/effects/effect-value-slider"
                        },
                        {
                            "title": "blur",
                            "$ref": "#/$defs/effects/effect-value-slider"
                        }
                    ]
                }
            },
            "required": [
                "ty"
            ]
        }
    ]
}