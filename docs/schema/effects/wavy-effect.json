{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Wavy Effect",
    "description": "",
    "allOf": [
        {
            "$ref": "#/$defs/effects/effect"
        },
        {
            "type": "object",
            "properties": {
                "ty": {
                    "title": "Wavy Effect Type",
