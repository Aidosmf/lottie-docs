                },
                "ef": {
                    "title": "Effect values",
                    "type": "array",
                    "prefixItems": [
                        {
                            "title": "Radius",
                            "$ref": "#/$defs/effect-values/slider"
                        },
                        {
                            "title": "Center",
                            "$ref": "#/$defs/effect-values/point"
                        },
                        {
                            "title": "Conversion Type",
                            "$ref": "#/$defs/effect-values/drop-down"
                        },
                        {
                            "title": "Speed",
                            "$ref": "#/$defs/effect-values/drop-down"
                        },
                        {
                            "title": "Effect Width",
                            "$ref": "#/$defs/effect-values/slider"
                        },
                        {
                            "title": "Effect Height",
                            "$ref": "#/$defs/effect-values/slider"
                        },
                        {
                            "title": "Phase",
                            "$ref": "#/$defs/effect-values/slider"
                        }
                    ]
                }
            },
            "required": [
                "ty",
                "ef"
            ]
        }
    ]
