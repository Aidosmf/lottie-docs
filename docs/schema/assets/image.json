{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Image",
    "description": "External image",
    "allOf": [
        {
            "$ref": "#/assets/asset"
        },
        {
            "type": "object",
            "properties": {
                "w": {
                    "title": "Width",
                    "type": "number",
                    "default": 0
                },
                "h": {
                    "title": "Height",
                    "type": "number",
                    "default": 0
                },
                "p": {
                    "title": "Image",
                    "type": "string",
                    "default": ""
                },
                "u": {
                    "title": "Image Path",
                    "type": "string",
                    "default": ""
                },
                "e": {
                    "title": "Embedded",
                    "description": "Whether the image is embedded",
                    "$ref": "#/types/int-boolean",
                    "default": 0
                }
            },
            "required": []
        }
    ]
}
