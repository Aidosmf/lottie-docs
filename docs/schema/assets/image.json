{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "Image",
    "description": "External image",
    "allOf": [
        {
            "$ref": "#/$defs/assets/asset"
        },
        {
            "type": "object",
            "properties": {
                "w": {
                    "title": "Width",
                    "description": "Width of the image",
                    "type": "number",
                    "default": 0
                },
                "h": {
                    "title": "Height",
                    "description": "Height of the image",
                    "type": "number",
                    "default": 0
                },
                "u": {
                    "title": "Path",
                    "description": "Path to the directory containing an image",
                    "type": "string",
                    "default": ""
                },
                "p": {
                    "title": "File name",
                    "description": "Image filename",
                    "type": "string",
                    "default": ""
                },
                "e": {
                    "title": "Embedded",
                    "description": "Whether the image is embedded",
                    "$ref": "#/$defs/helpers/int-boolean",
                    "default": 0
                }
            },
            "required": []
        }
    ]
}
